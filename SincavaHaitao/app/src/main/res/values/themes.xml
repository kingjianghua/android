<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.HaitaoTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <!-- The rest of your attributes -->

        <item name="actionModeBackground">@color/action_mode_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorButtonNormal">#FFAB00</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuText</item>
    </style>

    <style name="Theme.HaitaoTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <!-- The rest of your attributes -->

        <item name="actionModeBackground">@color/action_mode_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorButtonNormal">#FFAB00</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuText</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- <item name="colorControlNormal">@android:color/white</item> -->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="UserVoiceTheme" parent="Theme.HaitaoTheme">
        <!-- theme customizations -->
    </style>

</resources>